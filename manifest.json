{
  "name": "youtube channel grabber",
  "description": "Grab details from all videos from a Youtube channel",
  "version": "1.3",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ]
}